#include <stdio.h>

int main()
{
    int i,j,a;
    
    printf("How many lines?:");
    scanf("%d", &a);
    
    for(i=0;i<=a;i++){
        
        for(j=i;j<a;j++){
            printf("%s", " ");
        }
        for(j=1;j<=i;j++){
            printf("%2s","*");
            
        } 
        
        
      printf("\n");  
        
    }
     
    return 0;
}
