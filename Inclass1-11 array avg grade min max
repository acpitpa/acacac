#include <stdio.h>
#include <stdlib.h>
#define Size 5

int main()
{
    int i;
    int x[Size];
    for(i=0;i<Size;i++){
            //take all array elements in
            printf("Input number in [%d]", i+1, Size);
            scanf("%d", &x[i]);
    }

    int sum=0;
    float avg;
    for(i=0;i<Size;i++){
        sum+=x[i];
    }

    avg=(float) sum/Size;
    printf(" The average is %.2f\n", avg);

    for(i=0;i<Size;i++){
        if(x[i]>avg) printf("The student [%d] gets A\n", i+1);
        else if(x[i]<avg) printf("The student [%d] gets F\n", i+1);
        else printf("The student [%d] gets C\n", i+1);
 }
    return 0;
}



